#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Color:
            rgb: 0.1, 0.5, 0.24
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 20, 100
    canvas:
        Color:
            rgb: 0.1, 0.5, 0.24
        Rectangle:
            pos: self.pos
            size: self.size

<PongGameWidget>:
    ball: ping_ball
    player1: player_left
    player2: player_right
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas:
        Color:
            rgb: 0.1, 0.5, 0.24
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        color: 0.1, 0.5, 0.24

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
        color: 0.1, 0.5, 0.24

    PongBall:
        id: ping_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y